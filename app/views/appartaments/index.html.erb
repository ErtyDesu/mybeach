<p id="notice"><%= notice %></p>

<h1>Appartaments</h1>

<br> 

<a class="btn btn-primary" href="/appartaments/new" role="button">New appartament</a>

<br><br>

<div class="container">
  <table class="table table-dark table-striped  ">
    <thead>
      <tr>
        <th scope="col">Photo</th>
        <th scope="col">Name</th>
        <th scope="col">Place</th>
        <th scope="col">Address</th>
        <th scope="col">Phone</th>
        <th scope="col">Site</th>
        <th scope="col">Beds</th>
        <th scope="col">Cost</th>
        <th scope="col">Edit</th>
        <th scope="col">Destroy</th>
      </tr>
    </thead>
    
    <tbody>
      <% @appartaments.each do |appartament| %>
      <tr>
        <td>
          <% if appartament.cover.attached? %>
          <%= image_tag url_for(appartament.cover) ,:class => "w-50"%>
          <% end %>
        </td>
        <td><b><%= link_to appartament.name, appartament %></b></td>
        <td><%= appartament.place %></td>
        <td><%= appartament.address %></td> 
        <td><%= appartament.phone %></td>
        <td><%= appartament.site %></td>
        <td><%= appartament.beds %></td>
        <td><%= appartament.cost %></td>
        <td><%= link_to 'Edit', edit_appartament_path(appartament) %></td>
        <td><%= link_to 'Destroy', appartament, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>



